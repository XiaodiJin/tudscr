\newcommand*\tud@foot@line@add[3]{%
  \csgdef{@#1}{\trim@spaces{#2}}%
  \ifx#3\@empty\relax%
    \global\csletcs{@#1@foot}{@#1}%
  \else%
    \csgdef{@#1@foot}{#3}%
  \fi%
}
\newcommand*\tud@foot@line@write[1]{%
  \protected@edef\@tempa{\csuse{@#1@foot}}%
  \ifx\@tempa\@empty\else\newline{\csuse{@#1@foot}}\fi%
}

