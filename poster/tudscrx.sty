\AtEndPreamble{%
  \AfterPackage*{scrlayer-scrpage}{%
    \DeclareLayer[%
      % §§§ evtl. auch mit clone arbeiten
      background,align=tl,%
      contents={%
        \color{HKS41}%
        \rule{\layerwidth}{\tud@dim@topmargin}%
      },%
    ]{tudheadings.head.back}%
    \DeclareLayer[%
      % §§§ evtl. auch mit clone arbeiten
      background,align=tl,%
      voffset=\tud@dim@topmargin,%
      contents={%
        \color{HKS41!80}%
        \rule{\layerwidth}{\tud@dim@barheight}
      },%
    ]{tudheadings.head.bar}%
    \DeclareLayer[% tudscrver=2.02 ohne DDC-Logo: voffset?!
      background,%
      hoffset=0pt,
      width=\paperwidth,%
      voffset=\dimexpr\@nameuse{scr@l@tudheadings.foot.logo@y}%
        -\dp\strutbox\relax,
      height=\dimexpr\paperheight-\layeryoffset\relax,%
      contents={\color{HKS41}\rule{\layerwidth}{\layerheight}},%
    ]{tudheadings.foot.back}%
    \iftudscrverlower{2.03}{% tudscrver=2.02 ohne DDC-Logo
      \newlength\tud@dim@ddclayer%
      \AddToLayerPageStyleOptions{color.tudheadings}{%
        onbackground={%
          \tud@ddc@check%
          \ifcase\@tempb\relax%
            \setlength\tud@dim@ddclayer{\tud@dim@ddcdiff}%
          \else%
            \setlength\tud@dim@ddclayer{\z@}%
          \fi%
        }%
      }%
    }{}%
    \DeclareNewPageStyleByLayers{color.tudheadings}{%
      tudheadings.head.back,%§§§
      tudheadings.head.mainlogo,%
      tudheadings.head.logo,%
      tudheadings.head.bar,%§§§
      tudheadings.head.text,%
      tudheadings.foot.back,%§§§
      tudheadings.foot.logo,%
      scrheadings.foot.odd,%
      scrheadings.foot.even,%
      scrheadings.foot.oneside,%
    }%
    \AddToLayerPageStyleOptions{color.tudheadings}{%
      onselect={%
        \tud@ps@setlinewidth%
        \DeclarePageStyleAlias{plain}{plain.tudheadings}%
        \DeclarePageStyleAlias{headings}{tudheadings}%
        \def\sls@currentheadings{tudheadings}%
        \def\sls@currentplain{plain.tudheadings}%
%        {\TUDoptions{widehead}\color{red}}%
      },%
      onbackground=\def\tud@head@logocolor{white},%
    }
    \DeclareNewPageStyleAlias{colour.tudheadings}{color.tudheadings}%
    \DeclareNewPageStyleAlias{color}{color.tudheadings}%
    \DeclareNewPageStyleAlias{colour}{color.tudheadings}%
    \listadd\tud@ps@list{color.tudheadings}
  }
}

