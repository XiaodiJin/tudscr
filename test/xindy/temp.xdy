(require "texindy.xdy")
(define-location-class
  "arabic-page-numbers" ("arabic-numbers") :min-range-length 1
)
(markup-index
  :open
"\begin{theindex}
  \providecommand*\lettergroupDefault[1]{%
    \par\centerline{\textbf{Symbols}}\par%
    \nopagebreak%
  }
  \providecommand*\lettergroup[1]{%
      \par\centerline{\textbf{#1}}\par%
      \nopagebreak%
  }
  \makeatletter\scan@allowedfalse
"
  :close "~n~n\end{theindex}~n"
	:tree
)
(markup-range :sep "--")
(markup-locclass-list
  :open "\,\dotfill\,"
  :close "\relax"
)
(define-attributes (("main" "usage" "default")))
(markup-locref
  :attr "main"
  :open "\main{"
  :close "}"
)
(markup-locref
  :attr "usage"
  :open "\usage{"
  :close "}"
)
(merge-rule "U" "u")
